<h1>User info</h1>

 <%= image_tag @user.get_profile_image("100x100") %>

<div>
  <tr></tr>
  <table class="table">
    <tbody>
      <tr>
        <th><h3>Name</h3></th>
        <th><h3><%= @user.name %></h3></th>
      </tr>

      <tr>
      <th><h3>Introduction</h3></th>
      <h3><%= @user.introduction %></h3>
      <th> </th>
      <tr>
    </tbody>
  </table>

  <% if @user ==  current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>

</div>


<h1>Books</h1>

<table class="table">
<thead>
    <tr>
      <th></th>
        <th><p>Image</p></th>
        <th><p>Name</p></th>
        <th colspan="3"></th>
    </tr>
</thead>
<tbody>
<% @users.each do |user| %>


  
    <tr>
        <td><%= image_tag user.get_profile_image("100x100") %></td>
        <td> <span><%= user.name %></span> </td>
         <td> <span> <%= link_to 'Show', user_path(user)  %>  </span> </td>

    </tr>
  </tbody>
</table>
<% end %>